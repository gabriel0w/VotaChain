{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "resolveJsonModule": true
  },
  "include": ["./api/**/*.ts", "./scripts/**/*.ts", "./test/**/*.ts", "./client/**/*.ts"],
  "exclude": ["node_modules"]
}
